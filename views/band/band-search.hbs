<div class="d-flex align-items-center justify-content-center search-margin">
  <form action="/search/bands" method="POST">
    <h3>Choose the genre:</h3>
    <select class="form-control" name="genres" id="genres">
      <option value="rock">Rock</option>
      <option value="country">Country</option>
      <option value="pop">Pop</option>
      <option value="jazz">Jazz</option>
      <option value="hip-hop">Hip Hop</option>
      <option value="folk">Folk</option>
      <option value="electronic">Electronic</option>
      <option value="blues">Blues</option>
      <option value="instrumental">Instrumental</option>
      <option value="gospel">Gospel</option>
    </select>
    <button type="submit" class="btn btn-block search-btn">Search</button>
  </form>
</div>

<div class="user-ranking d-flex flex-column cards-margin">
  <div class="d-flex justify-content-around  flex-wrap">
    {{#each data}}
    <div class="card search-header-margin card-radius" style="width: 20rem;">
      <img src="{{this.picture.path}}" class="card-img-top card-img-size" alt="band-image">
      <div class="card-body d-flex flex-column">
        <h5 class="card-title">Name: {{this.bandname}}</h5>
        <p class="card-text">Biography: </p>
        <p class="card-text">{{this.biography}}</p>

        <div class="d-flex flex-column align-items-center justify-content-end card-link-size">
          <a href="/band-profile/{{this.id}}" class="btn btn-primary justify-content-center">Profile</a>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>