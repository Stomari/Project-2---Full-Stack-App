<h1>My bands</h1>
{{#each bands}}
<p>{{bandname}}- {{genre}}</p>
<textarea name="" id="" cols="30" rows="10">{{biography}}</textarea>
{{#if isLeader}}
<a href="/band-edit/{{_id}}">Edit</a>
<form action="/delete-band/{{_id}}" method="post">
  <button type="submit">Delete</button>
</form>
{{/if}}
<a href="/band-profile/{{_id}}">More</a>
{{/each}}
<a href="/create-band">Create a new band!</a>