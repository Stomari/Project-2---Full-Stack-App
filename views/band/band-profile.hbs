<div class="card search-header-margin card-radius" style="width: 20rem;">
  <img src="{{band.picture.path}}" class="card-img-top" alt="band-image">
  <div class="card-body">
    <h5 class="card-title">Name: {{band.bandname}}</h5>
    <h6 class="card-title">Members: {{#each band.members}}{{this.name}} {{this.surname}}{{/each}}</h6>
    <h6 class="card-title">Genres: {{band.genre}}</h6>
    <p class="card-text">Biography: </p>
    <p class="card-text">{{band.biography}}</p>
  </div>
</div>

{{#if x}}
<form action="/band-profile/{{band._id}}" method="post">
  <label for="chatband" name="">{{user.name}}</label>
  <textarea name="chatband" id="" cols="100" rows="5"
    placeholder="chatband">Enter your text for your band here =)</textarea>
  <button type="submit">Submit</button>
</form>
{{#each band.chatband}}
<p>{{this}}</p>
{{/each}}
{{/if}}

{{#if user.joined}}
<form action="/request-to-join/{{band._id}}" method="POST">
  <input type="submit" name="request" value="Request to join!">
</form>
{{/if}}