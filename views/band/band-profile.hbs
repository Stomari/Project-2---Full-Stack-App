<div class="d-flex flex-column align-items-center search-margin">
  <div class="card search-header-margin card-radius" style="width: 20rem;">
    <img src="{{band.picture.path}}" class="card-img-top d-flex align-self-center band-img-card" alt="band-image">
    <div class="card-body d-flex flex-column align-items-center">
      <h5 class="card-title">Name: {{band.bandname}}</h5>
      <h6 class="card-title">Members: {{#each band.members}}{{this.name}} {{this.surname}}, {{/each}}</h6>
      <h6 class="card-title">Genres: {{band.genre}}</h6>
      <p class="card-text">Biography: </p>
      <p class="card-text">{{band.biography}}</p>
    </div>
  </div>

  {{#if x}}
  <div class="d-flex align-items-center flex-column">
    <form action="/band-profile/{{band._id}}" method="post">
      <textarea name="chatband" id="" cols="auto" rows="2" placeholder="Enter your text for your band here =)"></textarea>
      <div class="d-flex align-self-center justify-content-center">
        <button type="submit" class="btn btn-primary">Send</button>
      </div>

    </form>
    {{#each band.chatband}}
    <p class="search-margin">{{this}}</p>
    {{/each}}
  </div>
  {{/if}}
  {{#if user.joined}}
  <form action="/request-to-join/{{band._id}}" method="POST">
    <input type="submit" name="request" value="Request to join!">
  </form>
  {{/if}}
</div>