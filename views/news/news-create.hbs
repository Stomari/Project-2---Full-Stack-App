<div>
  <form action="/news/create" method="POST" enctype="multipart/form-data">
    <label for="title">Title:</label>
    <input type="text" name="title" id="title" placeholder="Title">

    <br>

    <label for="abstract">Abstract:</label>
    <textarea name="abstract" id="abstract" cols="30" rows="10"></textarea>

    <br>

    <label for="text">Article text:</label>
    <textarea name="text" id="text" cols="100" rows="10"></textarea>

    <br>

    <input type="hidden" name="writerID" value="{{user.id}}">
    <label>Article Picture</label>
    <input type="file" name="photo">
    <br>
    <button type="submit">Create Article!</button>
  </form>
</div>