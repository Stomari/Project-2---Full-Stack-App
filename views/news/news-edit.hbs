<div>
  <form action="/news/{{id}}/edit" method="POST" enctype="multipart/form-data">
    <label for="title">Title:</label>
    <input type="text" name="title" id="title" value="{{title}}">

    <br>

    <label for="abstract">Abstract:</label>
    <textarea name="abstract" id="abstract" cols="30" rows="10">{{abstract}}</textarea>

    <br>

    <label for="text">Article text:</label>
    <textarea name="text" id="text" cols="100" rows="10">{{text}}</textarea>

    <br>

    <label>Article Picture</label>
    <input type="file" name="photo">
    <br>
    <button type="submit">Edit Article!</button>
  </form>
</div>